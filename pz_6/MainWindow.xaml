<Window x:Class="pz_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <InkCanvas x:Name="inkCanvas" Grid.Row="1" />
        <Button x:Name="startButton" Content="Start" Click="Button_Click" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <ProgressBar x:Name="progressBar" Grid.Row="2" Height="20" Minimum="0" Maximum="100" />
    </Grid>
</Window>